# MongoDB Configuration
MONGO_URL=mongodb://localhost:27017
DB_NAME=compliance_checker

# Security - CHANGE THESE IN PRODUCTION!
# Generate a secure JWT secret with: openssl rand -hex 32
JWT_SECRET_KEY=your-secure-random-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Admin Account Configuration
# Change these credentials before deploying to production
ADMIN_EMAIL=admin@yourcompany.com
ADMIN_PASSWORD=ChangeThisSecurePassword123!

# AI Service Configuration
OPENAI_API_KEY=your-openai-api-key-here
EMERGENT_LLM_KEY=your-emergent-llm-key-here

# CORS Configuration
# In production, set to your frontend domain (e.g., https://app.yourcompany.com)
CORS_ORIGINS=http://localhost:3000
DOMAIN=localhost

# Server Configuration
PORT=8001
HOST=0.0.0.0

# ChromaDB Configuration
CHROMA_PERSIST_DIRECTORY=./chromadb_data

# Rate Limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO
